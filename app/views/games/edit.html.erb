<% content_for(:title) do %>
<%= "Make Me A Baseball Card :: Edit Game" %>
<% end %>
<div class="score-board">
	<div id="game-error" class="ui-widget" style="display:none">
		<div class="ui-state-error ui-corner-all" style="padding: 0.7em;">
			<p class="validate-tips">
			</p>
		</div>
	</div>
	<table cellspacing="0" cellpadding="0">
		<thead>
			<tr class="scoreboard">
				<th title="Your Team Name" style="text-align:left"><img src="/images/scoreboard/team.png" /></th>
				<th title="Date of the Game" style="text-align:left"><img src="/images/scoreboard/date.png" /></th>
				<th title="Hits" ><img src="/images/scoreboard/h.png" /></th>			
				<th title="At Bats" ><img src="/images/scoreboard/ab.png"></th>
				<th title="Number of times you scored"><img src="/images/scoreboard/r.png"></th>
				<th title="Singles"><img src="/images/scoreboard/1b.png"></th>
				<th title="Doubles"><img src="/images/scoreboard/2b.png"></th>
				<th title="Triples"><img src="/images/scoreboard/3b.png"></th>
				<th title="Homeruns"><img src="/images/scoreboard/hr.png"></th>
				<th title="Runners batted in"><img src="/images/scoreboard/rbi.png"></th>
				<th title="Base on balls"><img src="/images/scoreboard/bb.png"></th>
				<th title="Strikeouts"><img src="/images/scoreboard/k.png"></th>
				<th title=""></th>
			</tr>
		</thead>
		<tbody>
			<%= form_for ([@player, @game]) do |f| %>
				<tr>
					<td><%= f.text_field :team_name, :size => 18, :style =>'text-align:left' %></td>
					<td>
						<input id="datepicker" type="text" size="11" style="text-align:left" value="<%= @game.date %>" />
						<%= f.hidden_field 'date' %>
					</td>
					<td><%= f.text_field :hits, :size => 3 %></td>
					<td><%= f.text_field :at_bats, :size => 3 %></td>
					<td><%= f.text_field :runs, :size => 3 %></td>
					<td><%= f.text_field :singles, :size => 3 %></td>
					<td><%= f.text_field :doubles, :size => 3 %></td>
					<td><%= f.text_field :triples, :size => 3 %></td>
					<td><%= f.text_field :homeruns, :size => 3 %></td>
					<td><%= f.text_field :rbis, :size => 3 %></td>
					<td><%= f.text_field :walks, :size => 3 %></td>
					<td><%= f.text_field :strike_outs, :size => 3, %></td>
					<td><a href="#" id="update_game" class="fake-button">Update</a></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>