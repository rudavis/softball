<%= form_for(@player, :html => { :multipart => true}) do |f| %>
<div id="player-error" class="ui-widget" style="display:none">
	<div class="ui-state-error ui-corner-all" style="padding: 0.7em;">
		<p class="validate-tips">
		</p>
	</div>
</div>
<div class="three-thirds">
	<div><%= f.label :name,"Your Name" %> <span class="required"> * </span><br />
	<div><%= f.text_field :name, :size => 35  %></div></div>
	<br />
	<div><%= f.label :bats %> <br />
		<div class="options">
			Right:<%= f.radio_button(:bats,"Right") %>&nbsp;&nbsp;
			Left:<%= f.radio_button(:bats,"Left") %>&nbsp;&nbsp;
			Switch:<%= f.radio_button(:bats,"Switch") %>&nbsp;&nbsp;
		</div>
	</div>
	<br />
	<div><%= f.label :throws %> <br />
		<div class="options">
			Right:<%= f.radio_button(:throws,"Right") %>&nbsp;&nbsp;
			Left:<%= f.radio_button(:throws,"Left") %>&nbsp;&nbsp;
			Switch:<%= f.radio_button(:throws,"Switch") %>&nbsp;&nbsp;
		</div>
	</div>
	<br />
	<div>
		<%= f.label :share_card, "Share Your Card?" %> <br />
		<div class="options">
			Private:<%= f.radio_button(:share_card,"false") %>&nbsp;&nbsp;			
			Public:<%= f.radio_button(:share_card,"true") %>&nbsp;&nbsp;
		</div>
	</div>
</div>
<div class="three-thirds">
	<div><%= f.label :position %> <br />
		<div id="baseball-field">
			<ul id="outfield">
				<li id="RF"><%= f.radio_button(:position,"RF", :title => "Right Field") %></li>
				<li id="CF"><%= f.radio_button(:position,"CF", :title => "Center Field") %></li>
				<li id="LF"><%= f.radio_button(:position,"LF", :title => "Left Field") %></li>
			</ul>
			<ul id="infield">
				<li id="first"><%= f.radio_button(:position,"1B", :title => "First Base") %></li>
				<li id="second"><%= f.radio_button(:position,"2B", :title => "Second Base") %></li>
				<li>
					<div id="pitch"><%= f.radio_button(:position,"P", :title => "Pitcher") %></div>
					<div id="catch"><%= f.radio_button(:position,"C", :title => "Catcher") %></div>
				</li>
				<li id="short"><%= f.radio_button(:position,"SS", :title => "Shortstop") %></li>
				<li id="third"><%= f.radio_button(:position,"3B", :title => "Third Base") %></li>
			</ul>
		</div>
	</div>
</div>
<div class="three-thirds">
	<div><label>Picture</label><br />
		<% if !@player.avatar_file_name %>
			<img id="player-cropped-picture" src="/images/avatar_placeholder.png" />
		<% else %>
			<%= image_tag @player.avatar.url(:large), :id =>"player-cropped-picture" %>
		<% end %>
		<br />
	</div>
	<div><%= f.file_field :avatar %></div>
	<br />	
	<a href="#" id="update_player" class="fake-button" style="float:right">Update</a>
</div>
<% end %>