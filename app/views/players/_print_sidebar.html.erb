<div class="right-sidebar">
	<div id="accordion">
		<h3><a href="#">Print from your printer</a></h3>
		<div>
			<p>
				<label>Cards per page:  </label>
					<select>
						<option>1</option>
					</select>
				&nbsp;&nbsp;<input type="button" class="fake-button" onClick="window.print()" value="Print" />
			</p>
		</div>
		<h3><a href="#">Share a link</a></h3>
		<div>
			<% if @player.share_card %>
				<p>
					<div>
						Copy and paste the link below to share your card with friends and family. <br />
						<input type="text" size="60" readonly="readonly" value = <%= @share_url.to_s %> />
					</div>
				</p>
				<br />
				<p>
					<a href="https://twitter.com/share" class="twitter-share-button" data-url= <%= @share_url.to_s %> data-text="Look!  I have my own Baseball Card!" data-via="MakeMeABaseball" data-count="none">Tweet</a>
					<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
				</p>
			<% end %>
			<% if current_player %>
				<p>
					Your card must be <b>Public</b> to share with your friends.
					<%= form_for @player, :remote => true do |f| %>
						<div style="margin-left:20px;margin-bottom:10px">
							Private:&nbsp;&nbsp;<%= f.radio_button(:share_card,"false", :class => 'submittable') %>&nbsp;&nbsp;
							Public:&nbsp;&nbsp;<%= f.radio_button(:share_card,"true", :class => 'submittable') %>&nbsp;&nbsp;
						</div>
					<% end %>
				</p>
				<p>
					Note: You can change your share settings any time under <%= link_to "My Account", edit_player_path(@player) %>.
				</p>
			<% end %>
		</div>
		<h3><a href="#" onClick="window.close();">Done</a></h3>
	</div>
	<div id="sidebar-ads" style="padding-top:10px;text-align:center;">
		<script type="text/javascript"><!--
		google_ad_client = "ca-pub-7407856351737007";
		/* print_card_sidebat */
		google_ad_slot = "5304327580";
		google_ad_width = 300;
		google_ad_height = 250;
		//-->
		</script>
		<script type="text/javascript"
		src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
		</script>
	</div>
</div>