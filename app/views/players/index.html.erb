			<li>Reason 1</li>
		</ul>
	</p>
	<input type="button" id="start-button" value="Get Started" />
</div>

<div id="dialog" title="Create your card">
	<%= render "form" %>
</div>


<script>
$(function() {
	$( "#dialog" ).dialog({
		autoOpen: false,
		modal: true,
		width: 650,
		resizable: false,
		buttons: {
			"Create": function() {
				var bValid = true;
				//TODO:  Form validation: First name & Last Name not blank
				//TODO:  Error handling and presentation.
				if (bValid) {
					$('#new_player').submit();
				};
			},
			Cancel: function() {
				$( this ).dialog( "close" );
			}
		}
	});
	
	$("#start-button").click(function() {
		$("#dialog").dialog("open");
		return false;
	});
});



</script>