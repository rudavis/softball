<div id="player">
	<div id="card-front">
		<img class="player-picture" src="/images/rosie.png" />
		<div class="player-name">
			<h2><%= @player.name %></h2>
		</div>
	</div>
	<div id="player-stats">
		<table id="name-position">
			<tr>
				<td><%= @player.name %></td>
				<td id="position">CF</td>
			</tr>
		</table>
		<h3>Season Stats</h3>
		<%= render :partial => "season_stats" %>
		<h3>Career Stats</h3>
		<%= render :partial => "career_stats" %>
		<h3>Player Bio</h3>
		<%= render :partial => "bio" %>
	</div>
</div>
<br />
<div id="games">
	<h2>Games</h2>
	<%= render :partial => "games/header" %>
	<%= render @player.games %>
	</tbody>
	</table>
	<input type="button" id="new-game" value="Add Game" />
</div>
<%= link_to 'Edit', edit_player_path(@player) %> |
<%= link_to 'Back', players_path %>

<div id="dialog" title="Add a Game">
	<p>
		<%= render :partial => "games/header" %>
		<%= render :partial => "games/form" %>
	</p>
</div>

<script>
$(function() {
	$( "#dialog" ).dialog({
		autoOpen: false,
		modal: true,
		width: 650,
		buttons: {
			"Create": function() {
				$( this ).dialog( "close" );
			},
			Cancel: function() {
				$( this ).dialog( "close" );
			}
		}
	});
	
	$("#new-game").click(function() {
		$("#dialog").dialog("open");
		return false;
	});
});
</script>